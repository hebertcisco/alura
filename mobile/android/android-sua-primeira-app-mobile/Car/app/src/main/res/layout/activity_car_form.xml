<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText android:id="@+id/activity_car_form_name"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:hint="@string/name"
        android:autofillHints="name"
        android:inputType="textCapWords"
        android:layout_height="wrap_content" />

    <EditText android:id="@+id/activity_car_form_model"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:hint="@string/model"
        android:autofillHints="model"
        android:inputType="textCapWords"
        android:layout_height="wrap_content" />

    <EditText android:id="@+id/activity_car_form_year"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:hint="@string/year"
        android:autofillHints="year"
        android:inputType="number"
        android:layout_height="wrap_content" />

    <Button android:id="@+id/activity_student_form_save"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:text="@string/save"
        android:layout_height="wrap_content" />
</LinearLayout>